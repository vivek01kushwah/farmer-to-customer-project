        <div class="input">
          <input type="number" class="input-field" name="mobile" id="mobile" required />
          <label class="input-label">Mobile:</label>
        </div>
        <div class="input">
          <input type="password" class="input-field" name="password" id="password" required />
          <label class="input-label">Password:</label>
        </div>
        <div class="action">
          <button class="action-button" name="submit" id="btn">Login</button>
        </div>
      </form>
      <div class="card-info">
        <p><a href="/signUpVendor" id="link">New User Register</a></p>
      </div>
    </div>
  </div>


</body>
